{
	"name": "crossover",
	"productName": "CrossOver",
	"version": "0.2.15",
	"description": "ðŸŽ¯ A Crosshair Overlay for any screen",
	"license": "MIT",
	"repository": "lacymorrow/crossover",
	"homepage": "https://github.com/lacymorrow/crossover",
	"author": {
		"name": "Lacy Morrow",
		"email": "me@lacymorrow.com",
		"url": "https://lacymorrow.com"
	},
	"bugs": {
		"url": "https://github.com/lacymorrow/crossover/issues"
	},
	"engines": {
		"node": ">=10 <14"
	},
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "xo --fix",
		"test": "npm run lint && ava -v",
		"sh:replacespaces": "find dist/ -name 'CrossOver*' -maxdepth 1 -exec bash -c ' mv \"$0\" \"${0// /-}\" ' {} \\;",
		"start": "sass src/index.scss:src/index.css -s compressed && electron .",
		"pack": "rm -f *.tgz && electron-builder --dir",
		"dist": "rm -rf dist && electron-builder --macos --linux",
		"release": "np"
	},
	"dependencies": {
		"@simonwep/pickr": "^1.4.2",
		"electron-context-menu": "^0.15.0",
		"electron-debug": "^3.0.0",
		"electron-store": "^4.0.0",
		"electron-unhandled": "^3.0.0",
		"electron-updater": "^4.0.6",
		"electron-util": "^0.12.0"
	},
	"devDependencies": {
		"ava": "^2.4.0",
		"electron": "^6.0.7",
		"electron-builder": "^21.2.0",
		"electron-builder-squirrel-windows": "^22.1.0",
		"electron-reloader": "^0.3.0",
		"husky": "^3.0.8",
		"np": "^5.0.3",
		"spectron": "^8.0.0",
		"xo": "^0.24.0"
	},
	"xo": {
		"envs": [
			"node",
			"browser"
		],
		"rules": {
			"array-bracket-spacing": [
				"error",
				"always"
			],
			"padded-blocks": [
				"error",
				{
					"blocks": "always",
					"switches": "always",
					"classes": "always"
				}
			],
			"padding-line-between-statements": [
				"error",
				{
					"blankLine": "always",
					"prev": "multiline-block-like",
					"next": "*"
				},
				{
					"blankLine": "always",
					"prev": "*",
					"next": "return"
				}
			],
			"object-curly-spacing": [
				"error",
				"always"
			],
			"space-in-parens": [
				"error",
				"always"
			]
		},
		"semicolon": false
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"appId": "com.lacymorrow.crossover",
		"publish": "github",
		"mac": {
			"category": "public.app-category.utilities",
			"darkModeSupport": true
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Game;Shooter"
		},
		"snap": {
			"plugs": [
				"default",
				"camera",
				"removable-media"
			]
		},
		"win": {
			"target": [
				"nsis",
				"portable"
			],
			"publish": "github",
			"verifyUpdateCodeSignature": false
		}
	},
	"husky": {
		"hooks": {
			"pre-push": "npm test"
		}
	}
}
